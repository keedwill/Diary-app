<div class="row">
    <div class="col s12 m8">
        <h3>{{story.title}}

            <a class="btn " href="/stories/edit/{{story._id}}"><i class="fa fa-edit" aria-hidden="true"></i></a>
        </h3>

        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{ formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{ stripTags story.body}}
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small" alt="" srcset="">
                
            </div>
        </div>
    </div>
</div>
<div class="row">
    <img src="/uploads/{{story.image}}"  alt="" srcset="">
</div>